header {
  padding: 10px 0;
  background-color: var(--overlayGray)
}

.logo {
  background: transparent url('../img/logo.png') top left no-repeat;
  background-size: 100%;
  height: 36px;
  text-indent: -99999px;
  &:hover {
    background-image: url('../img/logo.gif');
  }
}

.main-nav {
  font-size: .625rem;
  text-align: right;
  & ul {
    margin-top: 14px;
    & li {
      display: inline;
    }
  }
}